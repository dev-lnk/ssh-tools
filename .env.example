# Параметры для первоначальной настройки сервера (init.sh)
USER=root
INIT_PORT=22
SERVER_IP=your_server_ip
INIT_PASS=your_initial_password

# Новый root пароль
NEW_ROOT_PASS=new_root_password

# Новый пользователь с sudo правами
NEW_USER=newuser
NEW_USER_PASS=new_user_password

# SSH ключ (содержимое файла ~/.ssh/id_ed25519.pub или ~/.ssh/id_rsa.pub)
PUBLIC_KEY=ssh-ed25519 AAAAC3... user@hostname

# Новый SSH порт (рекомендуется изменить с 22 на другой)
NEW_SSH_PORT=2222

